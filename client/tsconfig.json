{
  "compilerOptions": {
    "outDir": "_build/client",
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./",
    "noUnusedLocals": true,
    "paths": {}
  },
  "include": ["./", "../typings"],
  "exclude": [
    "**/*.spec.ts"
  ]
}
