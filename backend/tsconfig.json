{
  "compilerOptions": {
    "outDir": "build/backend",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6"],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./",
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "config",
    "**/*.spec.ts"
  ],
  "types": [
    "typePatches"
  ]
}
