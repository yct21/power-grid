{
  "compilerOptions": {
    "outDir": "build/backend",
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6"],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./",
    "noUnusedLocals": true
  },
  "include": ["../typings", "./"],
  "exclude": [
    "**/*.spec.ts"
  ]
}
